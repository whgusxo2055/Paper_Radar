{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "refresh_interval": "1s"
  },
  "mappings": {
    "dynamic": true,
    "properties": {
      "id": { "type": "keyword" },
      "display_name": { "type": "text", "fields": { "keyword": { "type": "keyword", "ignore_above": 256 } } },
      "name_aliases": { "type": "keyword" },
      "active": { "type": "boolean" },
      "updated_at": { "type": "date" }
    }
  }
}

